# Voxtral + Orpheus Voice Assistant Configuration

# Model Configuration
VOXTRAL_MODEL_ID=mistralai/Voxtral-Mini-3B-2507
ORPHEUS_MODEL_ID=canopylabs/orpheus-3b-0.1-ft

# Server Configuration
HOST=0.0.0.0
PORT=8555
MAX_CONNECTIONS=20

# GPU Configuration (RunPod A40 Optimized)
DEVICE=cuda
TORCH_DTYPE=bfloat16
MAX_MODEL_LEN=4096
TENSOR_PARALLEL_SIZE=1
GPU_MEMORY_UTILIZATION=0.85

# Audio Configuration
SAMPLE_RATE=16000
TTS_SAMPLE_RATE=24000
MAX_AUDIO_LENGTH=30
CHUNK_DURATION=1.0

# Environment Variables for Optimization
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:256
TOKENIZERS_PARALLELISM=false
PYTHONUNBUFFERED=1
NVIDIA_TF32_OVERRIDE=0
TORCH_CUDNN_V8_API_ENABLED=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=voice_assistant.log

# Security (Optional - for production)
# API_KEY=your_api_key_here
# JWT_SECRET=your_jwt_secret_here

# RunPod Specific (Auto-detected)
# RUNPOD_POD_ID=auto
# RUNPOD_PUBLIC_IP=auto
